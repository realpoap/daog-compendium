{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "env": ["VITE_API_URL", "DATABASE_URL", "ACCESS_TOKEN_SECRET", "FRONTEND_URL", "REFRESH_TOKEN_SECRET"],
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
   "api#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "web#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    }
  }
}
